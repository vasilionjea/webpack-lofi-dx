{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationDir": ".tmp/types",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".tmp"
  ]
}